<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RuokaArpojaApp.RuuatPage">
    <ContentPage.Resources>
        <StyleSheet Source="/Assets/Tyylit.css"/>
    </ContentPage.Resources>
    
    <StackLayout>
        <Button x:Name="lisaaUusinappula" Text="Lisää uusi" StyleClass="nappula" Clicked="lisaaUusinappula_Clicked" Margin="10, 10, 10, 0"></Button>
        <!-- Näytä ruuat listana -->
        <CollectionView x:Name="collectionView"
                    Margin="20"
                    SelectionMode="Single">
            <CollectionView.ItemsLayout>
                <LinearItemsLayout Orientation="Vertical"
                               ItemSpacing="10" />
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout>
                        <Label Text="{Binding RuuanNimi}"
                           FontSize="Medium"/>
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        <Button x:Name="poistoNappula" StyleClass="nappula" Text="Poista" Clicked="poistoNappula_Clicked" Margin="10, 0, 10, 10"></Button>
    </StackLayout>
</ContentPage>